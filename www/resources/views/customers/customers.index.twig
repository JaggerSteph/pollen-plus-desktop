{% extends 'layouts/layout.twig' %}
{% block title %}
    Clients
{% endblock %}
{% block content %}
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Liste des clients</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- start project list -->

                        <table  id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap jambo_table bulk_action" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Structure</th>
                                <th>E-mail</th>
                                <th>Numero</th>
                                <th>Site internet</th>
                                <th>Actions</th>
                            </tr>
                            </thead>

                            <tbody>
                            {% for customer in customers %}
                                <tr>
                                    <td>{{ customer.name }}</td>
                                    <td>{{ customer.structure }}</td>
                                    <td>{{ customer.email }}</td>
                                    <td>{{ customer.phone }}</td>
                                    <td>{{ customer.siteweb }}</td>
                                    <td>
                                        <a href="#" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Modifier </a>
                                        <form style="display: inline" action="/customers/delete/{{ customer.id }}" method="post">
                                            {{ csrf_input() }}
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Supprimer</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- end project list -->

                    </div>
                </div>
            </div>
        </div>



{% endblock %}