{% extends 'layouts/layout.twig' %}

{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Factures</h3>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Ajouter une Facture</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <form action="" method="POST">
                            {{ csrf_input() }}
                            <input type="hidden" name="users_id" value="{{ auth.id }}">
                            <div class="form-group col-md-6 col-sm-6 col-xs-12 ">
                                <label for="customers">Nom du Client</label>
                                <select name="customers_id" id="customers" class="form-control">
								     <option disabled selected>Selectionner un Client</option>
                                    {% for customer in customers %}
                                        <option value="{{ customer.id }}">{{ customer.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group col-md-6 col-sm-6 col-xs-12 ">
                                <label for="name">Methode de Payement</label>
                                <select name="payment_method" id="payment_method" class="form-control">
                                    <option  disabled selected>Choisir une methode de Payement</option>
                                    <option value="Flooz">Flooz</option>
                                    <option value="MasterCard">MasterCard</option>
                                    <option value="Visa">Visa</option>
                                    <option value="T-Money">T-Money</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6 col-sm-6 col-xs-12 ">
                                <label for="account">Compte</label>
                                <input type="text" class="form-control" name="account">
                            </div>
                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="tax">Tax</label>
                                <input type="text" class="form-control" name="tax">
                            </div>
                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <button type="submit" class="btn btn-success">Ajouter une Facture</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}