{% extends 'layouts/layout.twig' %}

{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Factures</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Liste de Factures</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- start project list -->
                        <table  id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap jambo_table bulk_action" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Membre</th>
                                <th>Client</th>
                                <th>Compte</th>
                                <th>Methode de Payement</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for invoice in invoices %}
                                <tr>
                                    <td>

                                        <a>{{ invoice.users.name }}</a>
                                    </td>
                                    <td>
                                        {{ invoice.customers.name }}
                                    </td>
                                    <td>
                                        {{ invoice.account }}
                                    </td>
                                    <td>
                                        {{ invoice.payment_method }}
                                    </td>
                                    <td>
                                        <a href="/invoices/{{ invoice.id }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> Voir </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- end project list -->

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">

    </div>



{% endblock %}