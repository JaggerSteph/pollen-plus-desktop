{% extends 'layouts/layout.twig' %}

{% block content %}
    <div class="">
        <div class="row">
            <div class="col-md-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Ajouter un nouveau projet</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br/>
                        <form class="form-horizontal form-label-left input_mask" action="/projects/create" method="POST" enctype="multipart/form-data">
                            {{ csrf_input() }}
                            <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                                <label for="name">Nom du projet</label>
                                <input type="text" name="name" class="form-control" value="{{ project.name }}">
                                {{ error('name') }}
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                                <label for="type">Type de projet</label>
                                <select name="type" class="form-control">
                                    <option value="Developpement Web">Developpement Web</option>
                                    <option value="Multiplatform">Multiplatform</option>
                                </select>
                                {{ error('type') }}
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                                <label for="customer">Nom du client</label>
                                <select name="customer_id" class="form-control">
                                    <option  disabled selected>Selectionner le Client</option>
                                    {% for customer in customers %}
                                        <option value="{{ customer.id }}">{{ customer.name }}</option>
                                    {% endfor %}
                                </select>
                                {{ error('customer_id') }}
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                                <label for="members">Budget du Projet</label>
                                <input type="text" name="budget" class="form-control" value="{{ project.budget }}">
                                <input type="hidden" name="month" class="form-control" value="{{ month() }}">
                                {{ error('budget') }}
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                                <label for="members">Date de debut</label>
                                <input  type="text" name="started_at" class="form-control datepicker" value="{{ project.started_at }}">
                                {{ error('started_at') }}
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                                <label for="ended_at">Date de fin</label>
                                <input type="text" name="ended_at" class="form-control datepicker" value="{{ project.ended_at }}">
                                {{ error('ended_at') }}
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                <label for="members">Membres du projet</label>
                                <select name="members[]"  class=" form-control select2" multiple>
                                    {% for user in users %}
                                        <option value="{{ user.id }}">{{ user.name }}</option>
                                    {% endfor %}
                                </select>
                                {{ error('members') }}
                            </div>
                            <div class="col-md-12 col-sm-12 col-xs-12 form-group">
                                <label for="description">Description</label>
                                <textarea  name="description" class="form-control" rows="10">{{ project.description }}</textarea>
                                {{ error('description') }}
                            </div>
                            <div class="form-group">
                                <div class="col-md-9 col-sm-9 col-xs-12">
                                    <button class="btn btn-primary" type="reset">Annuler</button>
                                    <button type="submit" class="btn btn-success">Valider</button>
                                </div>
                            </div>


                        </form>

                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}