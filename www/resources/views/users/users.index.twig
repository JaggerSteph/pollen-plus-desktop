{% extends 'layouts/layout.twig' %}
{% block title %}
    Les Membres
{% endblock %}
{% block content %}
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Les Membres</h3>
            </div>

            <div class="title_right">
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Liste des Membres</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <!-- start users list -->
                        <table  id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap jambo_table bulk_action" cellspacing="0" width="100%">
                            <thead>
                            <tr>
                                <th>Nom et Prenom(s)</th>
                                <th>E-mail</th>
                                <th>Travail</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>
                                        {{ user.name }}
                                    </td>
                                    <td>
                                        {{ user.email }}
                                    </td>
                                    <td>
                                        {{ user.work }}
                                    </td>
                                    <td>
                                        <a href="/users/profile/{{ user.id }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> Voir </a>
                                        <a href="/users/edit/{{ user.id }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Modifier </a>
                                        {% if user.id  != auth.id %}
                                        <form style="display: inline" action="/users/delete/{{ user.id }}" method="post">
                                            {{ csrf_input() }}
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Supprimer</button>
                                        </form>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <!-- end users list -->

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">

    </div>



{% endblock %}